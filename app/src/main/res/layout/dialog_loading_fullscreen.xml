<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rounded_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            />
        <!--
        <ImageView
            android:id="@+id/rounded_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_loading_svg"
            android:layerType="software"
            />
        -->
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_loading"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_text_size"
            tools:visibility="visible"
            android:gravity="center"
            android:layout_below="@id/rounded_img"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_d"
            android:layout_marginRight="@dimen/margin_h"
            android:layout_marginTop="@dimen/margin_f"

            />


</RelativeLayout>