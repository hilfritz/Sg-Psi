<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:background="@drawable/rounded_corner_dialog_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rounded_img"
            android:layout_width="@dimen/drawable_dialog_icon"
            android:layout_height="@dimen/drawable_dialog_icon"
            android:layout_alignParentLeft="true"
            tools:background="#ababab"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_h"

            />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/dialog_text_size"
            tools:visibility="visible"
            tools:text="jklklk"
            android:gravity="start"
            android:layout_below="@id/rounded_img"
            android:layout_toRightOf="@id/rounded_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_b"
            android:layout_marginRight="@dimen/margin_h"
            />

        <LinearLayout
            android:layout_below="@id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:id="@+id/left_btn"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No"
                android:id="@+id/right_btn"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>