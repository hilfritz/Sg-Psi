<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <solid android:color="@color/dialog_background"></solid>

    <!-- view border color and width -->
    <stroke
        android:width="0dp"
        android:color="@android:color/transparent"></stroke>

    <!-- If you want to add some padding -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"></padding>

    <!-- Here is the corner radius -->
    <corners
        android:bottomLeftRadius="@dimen/margin_b"
        android:bottomRightRadius="@dimen/margin_b"
        android:topLeftRadius="@dimen/margin_b"
        android:topRightRadius="@dimen/margin_b"
        ></corners>

</shape>